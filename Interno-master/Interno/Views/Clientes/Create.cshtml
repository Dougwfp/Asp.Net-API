@model Interno.Models.Cliente

@{
    ViewBag.Title = "Criar novo Cliente";
}


@using (Html.BeginForm("Create", "Clientes", FormMethod.Post, new { @class = "mt-4" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h1 class="title-item">@ViewBag.Title</h1>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.CLIENTE_CNPJ, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CLIENTE_CNPJ, new { htmlAttributes = new { @class = "form-control maskCnpj inputCnpj", @id = "CLIENTE_CNPJ", @Autofocus = "true" } })
                @Html.ValidationMessageFor(model => model.CLIENTE_CNPJ, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CLIENTE_NOME, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CLIENTE_NOME, new { htmlAttributes = new { @class = "form-control", @Maxlength = "100" } })
                @Html.ValidationMessageFor(model => model.CLIENTE_NOME, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Criar" class="btn btn-primary btn-default" id="btnSubmit" disabled />
                @Html.ActionLink("Voltar", "Index", "Clientes", null, new { @class = "btn btn-secondary m-1 " })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
